<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Variedad"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="#D0D3D4" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Determinaci贸n de Pesos"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="18dp" />

    <TableLayout
        android:id="@+id/tabla_pesos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:minHeight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/editText4"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Precio"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seekBar_precio"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:max="10"
                android:textAlignment="center"
                android:thumbTint="@color/colorPrimaryLight" />

            <TextView
                android:id="@+id/tv_peso_precio"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0/10"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:minHeight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/editText5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Calidad / Precio"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seekBar_calidad"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:max="10"
                android:textAlignment="center"
                android:thumbTint="@color/colorPrimaryLight" />

            <TextView
                android:id="@+id/tv_peso_calidad"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0/10"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:minHeight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/editText6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Regi贸n"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seekBar_region"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:max="10"
                android:textAlignment="center"
                android:thumbTint="@color/colorPrimaryLight" />

            <TextView
                android:id="@+id/tv_peso_region"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0/10"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:minHeight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/editText7"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Puntuaci贸n"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seekBar_puntuacion"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:max="10"
                android:textAlignment="center"
                android:thumbTint="@color/colorPrimaryLight" />

            <TextView
                android:id="@+id/tv_peso_puntuacion"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0/10"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="visible" />

        </TableRow>
    </TableLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:visibility="invisible" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btn_obtener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#00796b"
        android:clickable="false"
        android:enabled="false"
        android:saveEnabled="false"
        android:text="Obtener Recomendaci贸n"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:theme="@style/Widget.AppCompat.Button.Colored" />

</android.support.v7.widget.LinearLayoutCompat>